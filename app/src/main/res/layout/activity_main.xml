<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.minmaxagent.MainActivity">
    <RelativeLayout
        android:id="@+id/gameInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userSoore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="User Score: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/userSooreValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="102"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/agentSoore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Agent Score: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/agentSooreValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="98"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/baseLinearLayout"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <GridLayout
            android:id="@+id/baseGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:useDefaultMargins="true"
            >


        </GridLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
