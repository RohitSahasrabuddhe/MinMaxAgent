<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_scenery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.minmaxagent.InstructionActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:srcCompat="@drawable/text_help" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/signpost_board" />

        <TextView
            android:id="@+id/textView"
            fontPath="fonts/ComicRelief.ttf"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="46dp"
            android:gravity="center"
            android:text="Collect connected groups of fruits by tapping them!\n\nThe remaining fruits fall down due to gravity.\n\nBeat the AI to generate a higher score!"
            style="@style/TextWhiteBlackShadow"
            android:textSize="25dp"
            tools:ignore="MissingPrefix" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:srcCompat="@drawable/button_red" />

</LinearLayout>
